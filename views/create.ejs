<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>

    <body>
        <%- include('partials/_header.ejs') %>
            <div class="create">
                <div class="container">
                    <div class="create__inner">
                        <div class="create-image">
                            <img src="/images/cat-create.jpg" alt="">
                        </div>
                        <div class="create-form">
                            <div class="create-title">
                                share your cat with others
                            </div>
                            <form class="create__form" action="/create" method="POST">
                                <div class="form-part">
                                    <label for="name">name</label>
                                    <input type="text" name="name" required>
                                </div>
                                <div class="form-part">
                                    <label for="date">birthdate</label>
                                    <input type="date" name="date_birth" required>
                                </div>
                                <div class="form-part">
                                    <label for="gender">gender</label>
                                    <!-- <input type="text" name="gender" id="" required> -->
                                    <div class="form-select">
                                        <select name="gender" id="">
                                            <option value="male">male</option>
                                            <option value="female">female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-part">
                                    <label for="petshop_name">petshop</label>
                                    <input type="text" name="petshop_name" id="" required>
                                </div>
                                <div class="form-part">
                                    <label for="adress">adress</label>
                                    <input type="text" name="adress" id="">
                                </div>
                                <div class="form-part">
                                    <label for="phone">phone</label>
                                    <input type="text" name="phone">
                                </div>
                                <div class="form-part">
                                    <label for="price">price</label>
                                    <input type="text" name="price" id="">
                                </div>
                                <div class="form-part">
                                    <label for="description">description</label>
                                    <textarea name="description" id="" cols="30" rows="2"></textarea>
                                </div>
                                <div class="form-part">
                                    <label for="url">photo</label>
                                    <input type="file" class="file" name="url" id="">
                                </div>

                                <input type="submit" class="form__btn" value="save & continue">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/_footer.ejs') %>
    </body>

</html>