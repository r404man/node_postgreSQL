<!DOCTYPE html>
<html lang="en">

<%- include('partials/_head.ejs') %>

    <body>
        <%- include('partials/_header.ejs') %>

            <div class="main">
                <div class="container">
                    <div class="main__inner detai">
                        <div class="main-slider">

                            <!-- Slider elements from data base (cats_photo) -->
                            <% if(catsGalleryUrl.length !==null) { %>
                                <% catsGalleryUrl.forEach(catsGalleryElement=> { %>
                                    <% if(catsGalleryElement.url !==null) { %>
                                        <div class="slider__item"> <img src="<%= catsGalleryElement.url %>" alt="">
                                        </div>
                                        <% } else {%>
                                            <div class="slider__item"> <img src="/images/cat-galleryError.png" alt="">
                                            </div>
                                            <% } %>
                                                <% }); %>
                                                    <% } %>
                        </div>
                        <div class="main-info">

                            <div class="info-labels">
                                <div class="label-text">name</div>
                                <div class="label-text">gender</div>
                                <div class="label-text">birthdate</div>
                                <div class="label-text">petshop</div>
                                <div class="label-text">adress</div>
                                <div class="label-text">phone</div>
                                <div class="label-text">price</div>
                                <div class="label-text">description</div>
                            </div>
                            <div class="info-titles">

                                <!-- Data fields (cat, petshop) -->
                                <% if(catsInfo.letgth !==0) {%>
                                    <% catsInfo.forEach(catData=> {%>
                                        <div class="titles-text">
                                            <%= catData.name %>
                                        </div>
                                        <div class="titles-text">
                                            <%= catData.gender %>
                                        </div>
                                        <div class="titles-text date">
                                            <%= catData.date_birth %>
                                        </div>
                                        <div class="titles-text">
                                            <%= catData.petshop_name %>
                                        </div>
                                        <div class="titles-text">
                                            <%= catData.adress %>
                                        </div>
                                        <div class="titles-text">
                                            <%= catData.phone %>
                                        </div>
                                        <div class="titles-text price">
                                            <%= catData.price %>
                                        </div>
                                        <div class="titles-text">
                                            <%= catData.description %>
                                        </div>
                                        <% })%>
                                            <% } else { %>
                                                <div class="titles-text">data not found</div>
                                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <%- include('partials/_footer.ejs') %>


                <!-- Main script -->
                <script src="/js/main.js"></script>
                
                <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
                <script type="text/javascript"
                    src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
                <script>

                    // Slider initialize
                    $(document).ready(function () {
                        if ($('.slider__item').length !== 1) {
                            $('.main-slider').slick({
                                slidesToShow: 1,
                                dots: true,
                                autoplay: true,
                            });
                        } else {
                            $('.main-slider').slick({
                                slidesToShow: 1,
                                dots: false,
                                autoplay: false,
                            });
                        }
                    });
                </script>

    </body>

</html>